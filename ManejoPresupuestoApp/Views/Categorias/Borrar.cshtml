@model Categoria
@{
    ViewData["Title"] = "Borrar Cuentas";
}

<h3 class="mb-3">¿Estás seguro que desea borrar la cuenta @Model.Nombre?</h3>
<form asp-controller="Categorias" asp-action="BorrarCategoria">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
