@model Categoria
@{
    ViewData["Title"] = "Crear categoría";
}

<h1>Crear Categoría</h1>
<hr />
<h5>De dónde provienen nuestros ingresos y en que gastamos nuestro dinero</h5>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<form id="form1" asp-action="Crear" >
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TipoOperacionId" class="form-label"></label>
        <select asp-for="TipoOperacionId" asp-items="@Html.GetEnumSelectList<TipoOperacion>()" class="form-select">
        </select>
        <span asp-validation-for="TipoOperacionId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}
