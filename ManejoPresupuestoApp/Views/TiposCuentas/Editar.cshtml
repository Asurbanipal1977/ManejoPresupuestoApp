@model TipoCuenta
@{
    ViewData["Title"] = "Editar Tipos de cuenta";
}

<h1>Modificar Tipo de cuenta @Model.Nombre</h1>
<h5>Se refiere a cómo vamos a agrupar las cuentas: Préstamos, tarjeta de crédito</h5>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<form id="form1" asp-controller="TiposCuentas" asp-action="Actualizar" >
    <input type="hidden" asp-for="@Model.Id"/>
    <div class="mb-3">
        <label asp-for="@Model.Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}
